<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btnLogActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnThreadActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btnThreadActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thread Activity"
            app:layout_constraintBottom_toBottomOf="@+id/btnLogActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnLogActivity"
            app:layout_constraintTop_toTopOf="@+id/btnLogActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>